@using CNSMarketing.Application.ViewModels

@{
    ViewData["Title"] = "Menü Rol Yönetimi";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

@model AssignRoleToMenuViewModel

<div class="main-container container-fluid">
    <div class="page-header">
        <h1 class="page-title">@ViewData["Title"]</h1>
        <div>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
        </div>
    </div>

    <div class="row row-sm">
        <div class="card">
            <div class="card-body">

                <form method="post" asp-action="AssignRoleToMenuPost">
                    <div class="row">
                        <!-- Rol Seçimi -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="roleSelect">Rol Seçin:</label>
                                <select id="roleSelect" class="form-control" name="roleId" onchange="loadRoleMenuList(this.value)">
                                    <option value="">Rol Seçin</option>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <option value="@role.Id">@role.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        

                        <div class="col-md-6">
                            <div id="menuContainer">
                            </div>
                        </div>

                         

                        <button type="submit" class="btn btn-primary">Rol Ata</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/CustomScript/Management/MenuRoleManagement.js"></script>
}
