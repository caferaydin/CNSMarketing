@using CNSMarketing.Application.Features.Command.AppUser.CreateUser
@model CreateUserCommandRequest


<div class="page">
    <div class="col col-login mx-auto mt-7">
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index"><img src="~/assets/images/brand/logo-white.png" class="header-brand-img m-0" alt=""></a>
        </div>
    </div>
    <div class="container-login100">
        <div class="wrap-login100 p-6">

            <form asp-action="CreateUser" method="post" class="form-control">
                <span class="login100-form-title">
                    Registration
                </span>
                <div class="wrap-input100 validate-input input-group">
                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                        <i class="mdi mdi-account" aria-hidden="true"></i>
                    </a>
                    <input asp-for="NameSurname" class="input100 border-start-0 ms-0 form-control" placeholder="Ad Soyad" required>
                </div>
                <span asp-validation-for="NameSurname" class="text-danger"></span>

                <div class="wrap-input100 validate-input input-group">
                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                        <i class="zmdi zmdi-account" aria-hidden="true"></i>
                    </a>
                    <input asp-for="Username" id="username" class="input100 border-start-0 ms-0 form-control" placeholder="Kullanıcı Adı" required>
                </div>
                <span id="username-feedback" class="text-danger"></span>

                <div class="wrap-input100 validate-input input-group">
                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                        <i class="zmdi zmdi-email" aria-hidden="true"></i>
                    </a>
                    <input asp-for="Email" id="email" class="input100 border-start-0 ms-0 form-control" placeholder="E-posta" required>
                </div>
                <span id="email-feedback" class="text-danger"></span>


                <div class="wrap-input100 validate-input input-group">
                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                        <i class="zmdi zmdi-phone" aria-hidden="true"></i>
                    </a>
                    <input asp-for="PhoneNumber" id="phone" class="input100 border-start-0 ms-0 form-control" placeholder="Telefon Numarası" required>
                </div>
                <span id="phone-feedback" class="text-danger"></span>


                <div class="wrap-input100 validate-input input-group" id="Password-toggle">
                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                        <i class="zmdi zmdi-eye" aria-hidden="true"></i>
                    </a>
                    <input asp-for="Password" class="input100 border-start-0 ms-0 form-control" type="password" placeholder="Şifre" required>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="wrap-input100 validate-input input-group" id="Password-toggle">
                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                        <i class="zmdi zmdi-eye" aria-hidden="true"></i>
                    </a>
                    <input asp-for="PasswordConfirm" class="input100 border-start-0 ms-0 form-control" type="password" placeholder="Şifreyi Onayla" required>
                </div>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>

                <label class="custom-control custom-checkbox mt-4">
                    <input type="checkbox" class="custom-control-input" required />
                    <span class="custom-control-label">Şartları ve politikayı <a href="#"> Kabul edin</a></span>
                </label>
                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn btn-primary">
                        Kayıt Ol
                    </button>
                </div>


            </form>
            <div class="text-center pt-3">
                <p class="text-dark mb-0 d-inline-flex">Zaten hesabınız var mı?<a asp-controller="Auth" asp-action="Login" class="text-primary ms-1">Giriş Yap</a></p>
            </div>
        </div>
    </div>
</div>